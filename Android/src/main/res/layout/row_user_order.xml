<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userOrder_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/Green"
    android:padding="8dp"
    >
  <!--HEADER-->
  <LinearLayout
      android:id="@+id/userOrder_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/userOrder_vendorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="48sp"
        android:padding="6dp"
        android:textColor="@color/TextColor_Main"
        tools:text="Aant Aant Aant Aant Aant "
        />
    <TextView
        android:id="@+id/userOrder_customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="48sp"
        android:textColor="@color/TextColor_Main"
        tools:text="ZomiDudu"
        tools:visibility="gone"
        />
  </LinearLayout>
  <!--UNDER HEADER-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/White"
      android:orientation="vertical"
      >
    <!--ORDER-DETAILS-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="13dp"
        android:padding="6dp"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <TextView
            android:text="@string/userOrder_sumAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/TextColor_Main"
            />
        <TextView
            android:id="@+id/userOrder_sumCustomerOrderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/TextColor_Main"
            android:textStyle="bold"
            tools:text="3 500 Ft"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/userOrder_sumCustomerFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/TextColor_Main"
            tools:text="@string/userOrder_sumCustomerFee_format"
            />
        <TextView
            android:id="@+id/userOrder_customersFeePercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/TextColor_Main"
            tools:text="@string/userOrder_customersFeePercent_format"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/userOrder_status_panel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/TextColor_Main"
            android:text="@string/userOrder_status"
            />
        <TextView
            android:id="@+id/userOrder_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/TextColor_Main"
            android:textStyle="bold"
            tools:text="Véglegesített tranzakció cserével"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/userOrder_feedbackPanel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
          <TextView
              android:id="@+id/userOrder_feedbackCustomer_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textColor="@color/TextColor_Main"
              tools:text="A Te értékelésed: "
              />
          <TextView
              android:id="@+id/userOrder_feedbackCustomer_value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textColor="@color/TextColor_Main"
              android:textStyle="bold"
              tools:text="Sikeres"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
          <TextView
              android:id="@+id/userOrder_feedbackVendor_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textColor="@color/TextColor_Main"
              tools:text="Az eladó értékelése: "
              />
          <TextView
              android:id="@+id/userOrder_feedbackVendor_value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textColor="@color/TextColor_Main"
              android:textStyle="bold"
              tools:text="Sikeres"
              />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
    <!--BOOKS-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="28sp"
          android:layout_marginBottom="13dp"
          android:textColor="@color/TextColor_Main"
          android:text="@string/userOrder_books_mainLabel"
          android:gravity="center"
          />
      <LinearLayout
          android:id="@+id/userOrder_books_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          />
    </LinearLayout>
    <!--EXCHANGE BOOKS-->
    <LinearLayout
        android:id="@+id/userOrder_exchangeBooksPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="28sp"
          android:layout_marginBottom="13dp"
          android:textColor="@color/TextColor_Main"
          android:text="@string/userOrder_exchangeBooks_mainLabel"
          android:gravity="center"
          />
      <LinearLayout
          android:id="@+id/userOrder_exchangeBooks_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>